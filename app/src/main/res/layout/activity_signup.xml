<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/sp"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_singup"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="44sp"
            android:gravity="center"
            android:text="@string/signup"
            android:textColor="@color/black"
            android:textSize="33sp" />

        <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="24sp"
            android:layout_marginRight="12sp"
            android:background="@drawable/ss"
            android:elevation="22sp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="22sp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/professionED"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="24sp"
            android:layout_marginRight="12sp"
            android:background="@drawable/ss"
            android:elevation="22sp"
            android:ems="10"
            android:hint="Profession"
            android:inputType="textPersonName"
            android:paddingLeft="22sp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/emailED"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="24sp"
            android:layout_marginRight="12sp"
            android:background="@drawable/ss"
            android:elevation="22sp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="22sp"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/PasswordED"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="24sp"
            android:layout_marginRight="12sp"
            android:background="@drawable/ss"
            android:elevation="22sp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:paddingLeft="22sp"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22sp"
            android:background="@drawable/but"
            android:elevation="22sp"
            android:gravity="center"
            android:paddingLeft="90sp"
            android:paddingRight="90sp"
            android:text="signup"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/goToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160sp"
            android:layout_marginTop="9sp"

            android:text="Already Have Account? "
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>